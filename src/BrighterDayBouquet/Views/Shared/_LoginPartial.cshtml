@using Microsoft.AspNetCore.Identity
@using BrighterDayBouquet.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-nav">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <a asp-controller="Cart" asp-action="ViewCart" class="btn btn-sm btn-outline-info navbar-btn mx-sm-2">View Cart</a>
            </li>
            <li>
                <button type="submit" class="btn btn-sm btn-outline-danger navbar-btn mx-sm-2">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right d-inline-flex">
        <li><a class="btn btn-outline-info navbar-btn mr-sm-2" style="width: 100px;" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a class="btn btn-outline-primary navbar-btn" style="width: 100px;" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
